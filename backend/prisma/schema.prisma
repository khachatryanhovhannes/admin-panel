generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Language {
  id         Int      @id @default(autoincrement())
  enName     String
  nativeName String
  shortName  String
  iconUrl    String?
  isActive   Boolean? @default(true)

  navbarItems  Navbar_item[]
  Text_content Text_content[]

  @@map("language")
}

model Navbar {
  id       Int     @id @default(autoincrement())
  title    String
  link     String
  parentId Int?
  orderId  Int
  isActive Boolean @default(true)

  parent   Navbar?  @relation("SubNavbars", fields: [parentId], references: [id])
  children Navbar[] @relation("SubNavbars")

  items Navbar_item[]

  @@map("navbar")
}

model Navbar_item {
  id         Int     @id @default(autoincrement())
  navId      Int
  languageId Int
  isActive   Boolean @default(true)
  text       String

  navbar   Navbar   @relation(fields: [navId], references: [id])
  language Language @relation(fields: [languageId], references: [id])

  @@map("navbar_item")
}

model Text {
  id           Int            @id @default(autoincrement())
  key          String
  Text_content Text_content[]

  @@map("text")
}

model Text_content {
  id         Int     @id @default(autoincrement())
  textId     Int
  languageId Int
  content    String?

  text     Text     @relation(fields: [textId], references: [id])
  language Language @relation(fields: [languageId], references: [id])

  @@map("text_content")
}

model Constants {
  id    Int    @id @default(autoincrement())
  key   String
  value String
}
